<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Html.Words("page.login")</title>
    <link rel="shortcut icon" type="image/png" href="~/favicon.png" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

    <script src="~/resource/angularjs/angular.min.js" type="text/javascript"></script>
    <script src="~/resource/jquery/jquery.min.3.3.1.js" type="text/javascript"></script>
    <script src="~/resource/jquery/jquery.ui.12.1/jquery-ui.min.js" type="text/javascript"></script>
    <link href="~/resource/jquery/jquery.ui.12.1/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/resource/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <link href="~/resource/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <link href="~/resource/style/wliu.v1.layout.css" rel="stylesheet" />
    <link href="~/resource/style/wliu.v1.button.css" rel="stylesheet" />
    <link href="~/resource/style/wliu.v1.com.css" rel="stylesheet" />

    <script src="~/resource/jquery/jq.wliu.v1.widget.js" type="text/javascript"></script>
    <link href="~/resource/jquery/jq.wliu.v1.widget.css" rel="stylesheet" />

    <script src="~/resource/angularjs/ng.wliu.v1.database.js" type="text/javascript"></script>
    <script src="~/resource/jquery/jq.wliu.v1.com.js" type="text/javascript"></script>

    <script src="~/resource/js/wliu.v1.com.js" type="text/javascript"></script>
    <script src="~/resource/js/wliu.v1.database.js" type="text/javascript"></script>

    <script>
        var GSiteJwtToken   = '';
        var GSiteSession    = '';
    </script>

    @Html.JWords()
    @RenderSection("Scripts", required: false)
    <script>
        $(function () {
            $("a.language[lang='@Context.Items["Lang"]']").addClass("active");
            $("a.language").off("click.lang").on("click.lang", function (event) {
                ChangeLang($(this).attr("lang"));
            });
        });
    </script>
</head>
<body>
    <div style="display:block;position:relative;width:100%; height:80px; min-width:320px; background:center center url(/resource/style/Images/shaoshishan.jpg) no-repeat; background-size:cover;">
        <div class="container" style="height:100%;">
            <div style="display:block; float:left; height:100%;">
                <img src="~/resource/style/Images/company-logo.png" style="height:100%;" class="img-fluid" />
            </div>
            <div style="display:block; float:right; margin-top:12px; color:white;">
                <i wliu btn16 language></i>
                <a class="language" style="font-size:18px;" lang="en">English</a>
                <span class="seperator">|</span>
                <a class="language" style="font-size:18px;" lang="cn">简体版</a>
            </div>
        </div>
    </div>
    <div class="container">
        <center>
            @RenderBody()
        </center>
    </div>
    @Html.LangForm()
</body>
</html>
