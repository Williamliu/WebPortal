@section scripts {
    <script>
        var viewData = new WLIU.ViewData();
        var app = angular.module("myApp", ["wliu_database"]);

        app.controller("mycontrl", function ($scope) {
            viewData.LinkScope($scope);
        });
        viewData.Init("/Admin/api/Setting/InitCategoryItem");
    </script>
}
<div ng-app="myApp" ng-controller="mycontrl">
    <ng-form>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <table cellpadding="0" cellspacing="0" width="100%" style="margin-top:6px;">
                        <tr>
                            <td width="20%" style="white-space:nowrap;padding-right:12px;" align="right">
                                <filter.label h2 fit right db="ViewData.database" tb="CategoryItem" col="CategoryFilter"></filter.label>
                            </td>
                            <td width="80%">
                                <filter.linkselect h2 style="min-width:240px;" db="ViewData.database" tb="CategoryItem" col="CategoryFilter"></filter.linkselect>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div wliu table grow shrink style="margin-top:12px;">
            <div row>
                <div cell style="background-color:#dddddd;">
                    <wliu.navi db="ViewData.database" tb="CategoryItem"></wliu.navi>
                </div>
            </div>
            <div row>
                <div head fixed style="width:40px;"></div>
                <div head medium><wliu.head db="ViewData.database" tb="CategoryItem" col="TitleEN"></wliu.head></div>
                <div head large><wliu.head db="ViewData.database" tb="CategoryItem" col="DetailEN"></wliu.head></div>
                <div head medium><wliu.head db="ViewData.database" tb="CategoryItem" col="TitleCN"></wliu.head></div>
                <div head large><wliu.head db="ViewData.database" tb="CategoryItem" col="DetailCN"></wliu.head></div>
                <div head fixed style="width:60px;"><wliu.head db="ViewData.database" tb="CategoryItem" col="Sort"></wliu.head></div>
                <div head fixed style="width:60px;"><wliu.head db="ViewData.database" tb="CategoryItem" col="Active"></wliu.head></div>
                <div head fixed style="width:56px;">
                    <wliu.hicon db="ViewData.database" tb="CategoryItem" icons="add,save,cancel"></wliu.hicon>
                </div>
            </div>
            <div row ng-repeat="row in ViewData.database.tables.CategoryItem.rows">
                <div cell center fixed style="width:40px;">
                    <wliu.rowstatus db="ViewData.database" tb="CategoryItem" guid="{{row.guid}}"></wliu.rowstatus>
                </div>
                <div cell medium>
                    <wliu.textbox db="ViewData.database" tb="CategoryItem" guid="{{row.guid}}" col="TitleEN"></wliu.textbox>
                </div>
                <div cell large>
                    <wliu.textbox db="ViewData.database" tb="CategoryItem" guid="{{row.guid}}" col="DetailEN"></wliu.textbox>
                </div>
                <div cell medium>
                    <wliu.textbox db="ViewData.database" tb="CategoryItem" guid="{{row.guid}}" col="TitleCN"></wliu.textbox>
                </div>
                <div cell large>
                    <wliu.textbox db="ViewData.database" tb="CategoryItem" guid="{{row.guid}}" col="DetailCN"></wliu.textbox>
                </div>
                <div cell center fixed style="width:60px;">
                    <wliu.textbox db="ViewData.database" tb="CategoryItem" guid="{{row.guid}}" col="Sort"></wliu.textbox>
                </div>
                <div cell center fixed style="width:60px;">
                    <wliu.bool db="ViewData.database" tb="CategoryItem" guid="{{row.guid}}" col="Active"></wliu.bool>
                </div>
                <div cell fixed style="width:56px;">
                    <wliu.bicon db="ViewData.database" tb="CategoryItem" guid="{{row.guid}}" icons="save,cancel,delete"></wliu.bicon>
                </div>
            </div>
        </div>
    </ng-form>

    <table.error></table.error>
    <form.error></form.error>

    <wliu.tooltip></wliu.tooltip>
    <wliu.hint></wliu.hint>
    <wliu.loadding oper="get"></wliu.loadding>
    <wliu.loadding oper="save"></wliu.loadding>
</div>