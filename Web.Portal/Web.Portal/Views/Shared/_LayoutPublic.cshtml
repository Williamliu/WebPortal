@{ WebUser PubUser = Context.Items["PubUser"] as WebUser; }
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
    <title>ShaoLin Temple of Canada, 少林寺, 少林文化中心</title>
    <meta name="description" content="ShaoLin; ShaoLin Temple; ShaoLin Temple of Canada; 少林寺; 少林文化中心; 加拿大少林文化中心">
    <link rel="shortcut icon" type="image/png" href="~/favicon.png" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

    <link rel="shortcut icon" type="image/png" href="~/favicon.png" />
    <script src="~/resource/angularjs/angular.min.js" type="text/javascript"></script>
    <script src="~/resource/angularjs/ng.wliu.v1.database.js" type="text/javascript"></script>
    <script src="~/resource/angularjs/ng.wliu.v1.layout.js" type="text/javascript"></script>

    <script src="~/resource/jquery/jquery.min.3.3.1.js" type="text/javascript"></script>
    <script src="~/resource/jquery/jquery.ui.12.1/jquery-ui.min.js" type="text/javascript"></script>
    <link href="~/resource/jquery/jquery.ui.12.1/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/resource/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <link href="~/resource/bootstrap/css/bootstrap.min.css" rel="stylesheet" />


    <link href="~/resource/style/wliu.v1.layout.css" rel="stylesheet" />
    <script src="~/resource/jquery/jq.wliu.v1.widget.js" type="text/javascript"></script>
    <link href="~/resource/jquery/jq.wliu.v1.widget.css" rel="stylesheet" />
    <script src="~/resource/jquery/jq.wliu.v1.com.js" type="text/javascript"></script>
    <link href="~/resource/style/wliu.v1.button.css" rel="stylesheet" />
    <link href="~/resource/style/wliu.v1.com.css" rel="stylesheet" />
    <script src="~/resource/js/wliu.v1.com.js" type="text/javascript"></script>
    <script src="~/resource/js/wliu.v1.database.js" type="text/javascript"></script>
    <script src="~/resource/js/wliu.v1.image.js" type="text/javascript"></script>
    <script>
        var GSiteJwtToken = GSiteJwtToken || '';
        var GSiteSession = GSiteSession || '';

        window.onscroll = function () { scrollFunction() };
        function scrollFunction() {
            if (document.body.scrollTop > 0 || document.documentElement.scrollTop > 0) {
                $("div[pub][menu]").addAttr("short");
                $("div[pub][menu][body] ul[first]").addAttr("short");
                $("div[pub][webcontent]").addAttr("short");
            } else {
                $("div[pub][menu]").removeAttr("short");
                $("div[pub][menu][body] ul[first]").removeAttr("short");
                $("div[pub][webcontent]").removeAttr("short");
            }
        }
        $(function () {
            $(document).off("click", "a[pub][menu][toggle][dropdown]").on("click", "a[pub][menu][toggle][dropdown]", function (evt) {
                if ($("div[pub][menu][body] ul[first]").is(":hidden"))
                    $("div[pub][menu][body] ul[first]").addAttr("show");
                else
                    $("div[pub][menu][body] ul[first]").removeAttr("show");
            });
            $(document).off("click", "a[wliu][btn-drop][dropdown]>ul>li").on("click", "a[wliu][btn-drop][dropdown]>ul>li", function (evt) {
                ChangeLang($(this).attr("lang"));
                $("span", $(this).closest("a[wliu][btn-drop][dropdown]")).html($(this).html());

            });
        });
    </script>
    @Html.JWords()
    @RenderSection("Scripts", required: false)
</head>
<body>
    <div pub menu shadow>
        <div pub menu body>
            <div pub menu left>
                <img src="~/Resource/style/Images/shaolin_log.png">
            </div>
            <div pub menu center>
                <a pub menu toggle dropdown>@Html.Words("pub.menu")</a>
                @{
                    if (PubUser.Id > 0)
                    {
                        <a pub menu mobile toggle href="/Profile/MyAccount">@Html.Words("my.account")</a>
                    }
                    else
                    {
                        <a pub menu mobile toggle href="/Home/SignIn">@Html.Words("sign.in")</a>
                    }
                }
                <partial name="_TopNav.cshtml" />
            </div>
            <div pub menu right>
                <table style="float:right;margin-top:">
                    <tr>
                        <td>
                            <a wliu btn-drop dropdown>
                                <span>@(Context.Items["Lang"].GetString() == "cn" ? "中文版" : "English")</span>
                                <ul>
                                    <li lang="en">English</li>
                                    <li lang="cn">中文版</li>
                                </ul>
                            </a>
                        </td>
                        <td desktop style="padding-left:5px; padding-right:5px;">|</td>
                        <td desktop>
                            @{ 
                                if (PubUser.Id>0)
                                {
                                    <a wliu btn-drop href="/Profile/MyAccount">@Html.Words("my.account")</a>
                                } else {
                                    <a wliu btn-drop href="/Home/SignIn">@Html.Words("sign.in")</a>
                                }
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div pub webcontent class="container" style="max-width:1360px;">@RenderBody()</div>
    @Html.LangForm()
</body>
</html>
