    <div class="ws_images">
        <ul>
            <li><img src="/HomePage/jslider/data/images/01.png" alt="" title="" id="1" width="1360" /></li>
            <li><img src="/HomePage/jslider/data/images/02.png" alt="" title="" id="2" width="1360" /></li>
            <li><img src="/HomePage/jslider/data/images/03.png" alt="" title="" id="3" width="1360" /></li>
        </ul>
    </div>
    <div class="ws_bullets">
        <div>
            <a href="#" title=""><img src="/HomePage/jslider/data/tooltips/01.png" alt="" />1</a>
            <a href="#" title=""><img src="/HomePage/jslider/data/tooltips/02.png" alt="" />2</a>
            <a href="#" title=""><img src="/HomePage/jslider/data/tooltips/03.png" alt="" />3</a>
        </div>
    </div>
